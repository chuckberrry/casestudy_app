<mvc:View controllerName="cs.case_study.controller.View1" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout.form">
	<App id="idAppControl">
		<pages>
			<Page id="main" title="{i18n>title}" class="marginBoxContent">
				<customHeader>
					<Bar class="cbsHeaderBar">
						<contentLeft>
							<Image class="sapUiSmallMarginBegin" alt="logo" src="img/cbs_logo.png" width="100px"/>
						</contentLeft>
					</Bar>
				</customHeader>
				<content>
					<Button text="Upload Image" press="openUploadDialog"></Button>
					<Button type="Emphasized" text="Run" press="onRun"/>
					<VBox>
						<Image id="img1" alt="Image Preview" src="/AWS_case_study/preview/demo.jpg" width="12rem" height="9rem" visible="{/afterUpload}"/>
					</VBox>
					<Panel expandable="true" expanded="false" headerText="Expert Mode" width="auto" class="sapUiResponsiveMargin">
						<content>
							<Label text="Pixel Threshold"/>
							<Slider id="Input1" enableTickmarks="true" value="0.6" width="100%" min="0.0" max="1.0" step="0.05" showAdvancedTooltip="true"
								showHandleTooltip="false" inputsAsTooltips="true" class="sapUiMediumMarginBottom"/>
							<Label text="Link Threshold"/>
							<Slider id="Input2" enableTickmarks="true" value="0.5" width="100%" min="0.0" max="1.0" step="0.05" showAdvancedTooltip="true"
								showHandleTooltip="false" inputsAsTooltips="true" class="sapUiMediumMarginBottom"/>
							<Label text="Change the angle of the Image"/>
							<Slider id="Input3" value="0" width="100%" min="0.0" max="180" showAdvancedTooltip="true" showHandleTooltip="false" inputsAsTooltips="true"
								class="sapUiMediumMarginBottom"/>
							<CheckBox text="Check for auto align" id="ch1" selected="false" visible="true" enabled="true" name="align" activeHandling="true"></CheckBox>
						</content>
					</Panel>
					<Panel expandable="true" expanded="false" headerText="Show/Hide Textbox result" width="auto" class="sapUiResponsiveMargin">
						<content>
							<Image id="img2" visible="{/afterRun}" alt="Textbox Image" src="/AWS_case_study/images/demo_res.jpg" width="36rem" height="27rem"/>
						</content>
					</Panel>
					<Panel expandable="true" expanded="false" headerText="Show/Hide Recognition Results" width="auto" class="sapUiResponsiveMargin">
						<content>
							<Table items="{/Recognition Result}" visible="{/afterRun}">
								<items>
									<ColumnListItem>
										<cells>
											<Text text="{text}"></Text>
										</cells>
									</ColumnListItem>
								</items>
								<columns>
									<Column>
										<header>
											<Text text="Results"></Text>
										</header>
									</Column>
								</columns>
							</Table>
						</content>
					</Panel>
					<Button class="sapUiSmallMarginBottom" text="Show Table Select Dialog" press="handleTableSelectDialogPress" visible="{/afterRun}">
						<customData>
							<core:CustomData key="multi" value="true"/>
						</customData>
					</Button>
					<Button class="sapUiSmallMarginBottom" text="Send" press="onSend" visible="true"></Button>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>